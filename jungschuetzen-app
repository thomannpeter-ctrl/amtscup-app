<script>
async function loadGroups() {
  const selects = [g1Select, g2Select, g3Select];
  selects.forEach(s => s.innerHTML = "<option value=''>Bitte wählen …</option>");

  try {
    const t = await (await fetch("gruppen.txt")).text();
    const lines = t.split(/\r?\n/).filter(l => l.trim());

    lines.forEach(line => {
      selects.forEach(s => {
        const o = document.createElement("option");
        o.textContent = line;
        o.value = line;
        s.appendChild(o);
      });
    });

  } catch (e) {
    alert("gruppen.txt konnte nicht geladen werden!");
  }
}

function createRows(id) {
  const tbody = document.getElementById(id);
  tbody.innerHTML = "";
  for (let i = 1; i <= 4; i++) {
    tbody.innerHTML += `
      <tr>
        <td>Schütze ${i}</td>
        <td><input class="name"></td>
        <td><input class="year"></td>
        <td><input class="res" type="number"></td>
        <td class="total">0</td>
      </tr>`;
  }
}

function calc(table, sumR, sumT) {
  let R = 0, T = 0;
  document.querySelectorAll(`#${table} .res`).forEach(inp => {
    const v = parseFloat(inp.value) || 0;
    R += v;
    T += v;
    inp.parentElement.parentElement.querySelector(".total").textContent = v;
  });
  document.getElementById(sumR).textContent = R;
  document.getElementById(sumT).textContent = T;
}

setInterval(() => {
  calc("g1Table", "g1SumR", "g1SumT");
  calc("g2Table", "g2SumR", "g2SumT");
  calc("g3Table", "g3SumR", "g3SumT");

  c1Val.textContent = g1SumT.textContent;
  c2Val.textContent = g2SumT.textContent;
  c3Val.textContent = g3SumT.textContent;

  c1Name.textContent = g1Select.value;
  c2Name.textContent = g2Select.value;
  c3Name.textContent = g3Select.value;
}, 200);

window.onload = () => {
  loadGroups();
  createRows("g1Table");
  createRows("g2Table");
  createRows("g3Table");
};
</script>

